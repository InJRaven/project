{
  "manifest_version": 3,
  "name": "Cousera Tool Auto",
  "description": "Tổng Hợp Tool Cousera",
  "version": "1.0.0",

  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "host_permissions": ["https://www.coursera.org/*"],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "icons": {
    "16": "img/favicon-v3.png",
    "32": "img/favicon-v3.png",
    "48": "img/favicon-v3.png",
    "128": "img/favicon-v3.png"
  },
  "action": {
    "default_icon": "img/favicon-v3.png",
    "default_popup": "index.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["content/*.js", "content/data/*.json"],
      "matches": ["https://www.coursera.org/*"]
    }
  ]
}
